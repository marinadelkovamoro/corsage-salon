<div class="container-fluid" id="cart-page">
    <h3>Shopping Cart</h3>
    <hr>
    <div class="row table-title">
        <div class="col">Product Name</div>
        <div class="col"></div>
        <div class="col">Price</div>
        <div class="col">Quantity</div>
        <div class="col"></div>
    </div>
    <hr>
</div>
<div class="container-fluid">

<div class="row p-3 pr-5" id="cart-buttons">
    <button type="button" class="btn btn-success" id="cart-btn-continue">Continue Shopping</button>
    <button type="button" class="btn btn-danger mr-auto" id="cart-btn-clear">Clear Shopping Cart</button>

    <h4 class="cart-total pt-2 mr-3">Total</h4>
    <button type="button" class="btn btn-warning" id="cart-btn-checkout">Checkout</button>
</div>
</div>